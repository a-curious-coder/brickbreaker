<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_list">
    
    <!-- TITLE -->
    <ImageView
        android:id="@+id/menuTitle"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:src="@drawable/game_title1"
        />

    

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!--Power brick -->
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/power_brick"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/PLAYSIR"
                android:text="\t10 points"
                android:textSize="18sp"
                android:paddingLeft="10dp"/>
        </TableRow>

        <!--Normal/Basic brick -->
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/basic_brick"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/PLAYSIR"
                android:text="\t5 Points"
                android:textSize="18sp"
                android:paddingLeft="10dp"/>
        </TableRow>

        <!--Life brick -->
        <TableRow
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/life_brick"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/PLAYSIR"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:text="\t1 Life"/>
        </TableRow>
    </TableLayout>



    <ImageView
        android:id="@+id/startGame"
        android:src="@drawable/play_button"
        android:layout_height="60dp"
        android:layout_width="180dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:onClick="mainMenu"
        />




</LinearLayout>